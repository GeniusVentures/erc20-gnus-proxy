{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "checkJs": false,
    "rootDirs": [
      "./scripts", 
      "./test", 
      "./typechain-types", 
      "./packages/hardhat-diamonds/", 
      "./packages/diamonds/"
    ],
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@gnus.ai/diamonds/*": ["./packages/diamonds/src"],
      "@gnus.ai/hardhat-diamonds/*": ["./packages/hardhat-diamonds/src"]
    }
  },
  "include": [
    "./scripts", 
    "./test", 
    "./typechain-types",
    "./packages/diamonds/**/*.ts"  ],
  "exclude": ["node_modules", "dist", "notes"],
  "files": ["./hardhat.config.ts"],
  "workspaces": ["packages/*"]
}