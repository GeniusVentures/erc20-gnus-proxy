    "version": "0.2.0",
    "configurations": [
        {
            "name": "Basic Tests",
            "type": "node",
            "request": "launch",
            // "preLaunchTask": "tsc: build - tsconfig.json",
            "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
            "args": [
                "test",
            ],
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**/*.js"],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/dist/**/*.js", 
                "${workspaceFolder}/**/*.ts",
            ],
            "sourceMaps": true,
            "smartStep": true,
            // "trace": true,
            "console": "integratedTerminal",
        },
        {
            "name": "Multichain Plugin Test",
            "type": "node",
            "request": "launch",
            // "preLaunchTask": "tsc: build - tsconfig.json",
            "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
            "args": [ 
                "test-multichain", 
                "${workspaceFolder}/test/deployment/MultiChainForkDeploy.test.ts",
                "${workspaceFolder}/test/unit/ERC20Proxy.test.ts",
                "--chains", "hardhat", "--logs", "logs",
                // "--chains", "sepolia", "--logs", "logs",
                // "--chains", "polygon_amoy", "--logs", "logs",
                // "--chains", "mainnet", "--logs", "logs", 
                // "--chains", "polygon", "--logs", "logs",
                // "--chains", "bsc", "--logs", "logs",
                // "--chains", "base", "--logs", "logs",
                // "--chains", "bsc_testnet", "--logs", "logs",
                // "--chains", "base_sepolia", "--logs", "logs",
                // "--chains", "hardhat,sepolia", "--logs", "logs",
                // "--chains", "sepolia,polygon_amoy", "--logs", "logs",
                // "--chains", "hardhat,sepolia,polygon_amoy", "--logs", "logs", 
            ],
            "runtimeArgs": [ "--preserve-symlinks" ],
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "skipFiles": [
                "<node_internals>/**", 
                "${workspaceFolder}/node_modules/**/*.js", 
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/dist/**/*.js", 
                "${workspaceFolder}/**/*.ts",
                "${workspaceFolder}/node_modules/hardhat/**/*.js",
                "${workspaceFolder}/node_modules/hardhat/**/*.ts",
            ],
            "sourceMaps": true,
            "smartStep": true,
            "console": "integratedTerminal",
        },
    ]
}